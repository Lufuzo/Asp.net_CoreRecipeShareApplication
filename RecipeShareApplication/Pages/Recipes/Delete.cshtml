@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Recipe";
}

<h2>Delete Recipe</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this recipe?
</div>

<div>
    <h4>@Model.Recipe.Title</h4>
    <p><strong>Cooking Time:</strong> @Model.Recipe.CookingTime minutes</p>
    <p><strong>Tags:</strong> @string.Join(", ", Model.Recipe.DietaryTags)</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>